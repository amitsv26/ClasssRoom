// Write a program to get two float from the user and print the sum of the two float?

#include<stdio.h>
struct sum{
    float a;
    float b;
    float r;
};
struct sum s;

struct sum input()
{
    printf("Enter two nos.:\n");
    scanf("%f%f",&s.a,&s.b);
    return s;
}

struct sum compute()
{
    s.r = s.a + s.b;
    return s;
}

struct sum output()
{
    printf("Addition of %f and %f is %f\n",s.a,s.b,s.r);
}

int main()
{
    struct sum s;
    input();
    compute();
    output();
}
